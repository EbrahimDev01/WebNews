@model IEnumerable<PreviewNewsViewModel>
<!-- slider -->
<div class="news-slider border-radius">
    <div id="slider-one" class="owl-carousel">


        @foreach (var item in Model)
        {
            <!-- each item -->
            <div class="item">
                <img src="/img/thumb.png">
                <div class="left-side">
                    <h2>
                        <a asp-controller="News"
                           asp-action="News"
                           asp-route-id="@item.Id"
                           class="text-for-show w-55">@item.Title</a>
                    </h2>
                    <p class="text-for-show">
                        @item.Text
                    </p>
                    <span> <i class="fa fa-calendar"></i> انتشار : @item.CreateDate</span>
                </div>
                <div class="clearfix"></div>
            </div>
            <!-- end each item -->
        }

    </div>
    <a asp-controller="Archive" asp-action="ArchiveAll" class="news-archive"> <i class="icons icon-doc-1"></i> آرشیو کامل خبرها </a>
</div>
<!-- End slider -->
