@model IEnumerable<ShowCommentViewModel>


@foreach (var item in Model)
{
    <!-- start each comment -->
    <li class="comment-item" id="comment-item-@(item.CommentId)">

        <img src="@item.Image">
        <div class="comment-item-title">
            <span class="text-for-show"> @item.UserName </span>
            <span class="text-for-show"> @item.CreateDate </span>
        </div>


        <div class="comment-item-body">
            <h2 class="text-for-show">
                @item.Title
            </h2>
            <p>@item.Body</p>
        </div>

        <section class="comment-item-option">

            <input hidden type="checkbox" class="checkbox" id="show-options-comment-@(item.CommentId)" />

            <label for="show-options-comment-@(item.CommentId)">
                <span class="comment-item-option-plus"></span>
            </label>

            <div class="comment-item-option-buttons">
                <button class="btn btn-danger" type="button" onclick="DeleteComment(@item.CommentId)">
                    <i class="fa fa-times"></i>
                </button>

                <button class="btn btn-warning" onclick="SwithToEdit(@item.CommentId)" type="button">
                    <i class="fa fa-edit"></i>
                </button>
            </div>
        </section>
    </li>
    <!-- end each comment -->
}
